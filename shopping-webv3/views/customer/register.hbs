<h1>{{title}}</h1>
{{#if errors}}
    {{#each errors}}
        <div class = "alert alert-warning">
            {{this.msg}}
        </div>
    {{/each}}
{{/if}}
<div class="row">
    <div class = "col-md-4 col-md-offset-4">
        <form action="/customer/register" method="post">
            <div class="form-group">
                <label for="alias-name">Username</label>
                <input type = "username" name="username"class="form-control" placeholder="Username" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type = "text" name="email" class="form-control" placeholder="Email" required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type = "password" name="password" class="form-control" placeholder="Password"  required>
            </div>
            <div class="form-group">
                <label for="repassword">Re-enter Password</label>
                <input type = "repassword" name="repassword" class="form-control" placeholder="Re-enter Password" required>
            </div>
            <div class="form-group">
                <label>Comments</label>
                <textarea name="comments" class="form-control" placeholder="comments" required></textarea>
            </div>
            <!--<button type="submit" id ="onclick rightreading"  class="btn btn-info" >  Register </button>-->

            <!--onclick="window.location.href='/'"-->

            <!--<button type="submit" id = "rightreading veri" class="btn btn-info" > Register </button>-->
            <!--<button type=" submit" id ="onclick rightreading" class="btn btn-info">Register</button>-->
            <button id ="onclick rightreading" class="btn btn-info">Register</button>
        </form>
    </div>
</div>
